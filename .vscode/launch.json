{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug Client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Next.js: Debug Full Stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Ready in",
        "uriFormat": "http://localhost:3000"
      }
    }
  ]
}
